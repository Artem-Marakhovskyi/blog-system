@model IEnumerable<Practice.Models.UserViewModel>
@{
    ViewBag.Title = "Main page";
}
<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
<script src="~/Scripts/logic/hiddenLogic.js"></script>
<script src="~/Scripts/logic/multiselectLogic.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="~/Scripts/semantic.js"></script>




<style>
    .formButton {
        width: 195px;
    }

    .img {
        position: relative;
        width: 100%;
    }

    #myCarousel {
        margin-top: 1.5%;
        border-radius: 15px;
        margin-bottom: 1.5%;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <div class="col-sm-8">
            @foreach (var item in Model)
            {
                <div style="margin-bottom: 5%;   overflow: hidden;">

                        <div class="form-group">
                            <p style="width: 30%; float:left">
                                <strong style ="vertical-align: -webkit-baseline-middle;">
                                    @item.Email
                                </strong>
                            </p>
                            <p style="width: 20%; float:left">
                                <strong style ="vertical-align: -webkit-baseline-middle;">
                                    Current role: @item.Role
                                </strong>
                            </p>
                            <div class="col-lg-pull-6">
                                @using (Html.BeginForm("ChangeToRole", "User", FormMethod.Post))
                                {
                                    string secondRole = item.Role == "Admin" ? "User" : "Admin";
                                    @Html.Hidden("email", item.Email)
                                    @Html.Hidden("role", secondRole)
                                    <button style="float:right" class="ui primary submit labeled icon button formButton" type="submit" style="margin-bottom: 5%">
                                        <i class="icon edit"></i> Change to @secondRole
                                    </button>
                                }
                            </div>
                        </div>

                    </div>
            }
        </div>
    </div>
</div>

